<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.shivam.HotelManagement.Activity.PaymentActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Gateway"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:textColor="#fff"
            android:textStyle="bold|italic"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Card Number"
        android:textColor="#000"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/cardno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="14dp"
        android:inputType="number"
        android:background="@drawable/card_back"
        android:hint="xxxx-xxxx-xxxx-xxxx" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardno"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="87dp"
        android:text="CVV"
        android:textColor="#000"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/cvvno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cardno"
        android:layout_alignBottom="@+id/cardno"
        android:inputType="number"
        android:layout_alignStart="@+id/textView2"
        android:background="@drawable/card_back"
        android:hint="xxx" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cardno"
        android:layout_below="@+id/cardno"
        android:layout_marginTop="22dp"
        android:text="Expires"
        android:textColor="#000"
        android:id="@+id/textView3" />

    <EditText
        android:id="@+id/expire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="18dp"
        android:inputType="number"
        android:background="@drawable/card_back"
        android:hint="xxx" />

    <Button
        android:id="@+id/confirmpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cardbutton"
        android:text="confirm payment"

        />
</RelativeLayout>
